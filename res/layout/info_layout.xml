<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".InfoScreen" >

    <TextView
        android:id="@+id/info_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12sp"
        android:gravity="center"
        android:text="@string/application_info_header"
        android:textColor="@color/section_content_text_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0sp"
            android:background="@color/background_color"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/desc"
                android:textColor="@color/section_content_text_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0sp"
                android:layout_marginTop="0sp"
                android:layout_weight="1"
                android:contentDescription="@string/altun_silsile"
                android:src="@drawable/silsile_resim1" />

            <TextView
                android:id="@+id/info_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/altun_silsile"
                android:textColor="@color/section_content_text_color"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>